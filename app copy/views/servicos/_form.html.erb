<h1 align="right" id="header">Servicios</h1>
<%= link_to 'Volver', servicos_path %>
<%= form_for(@servico) do |f| %>
 <% if @servico.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@servico.errors.count, "error") %> prohibited this asset from being saved:</h2>

      <ul>
        <% @servico.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="group">
    <table>
      <tr>
        <td>Descripcion :</td>
        <td><%= f.text_field :nome, 
                             :size => 25,
                             :onkeydown => "f(this)",
                             :onkeyup => "f(this)"%></td>

      </tr>
       <tr>
        <td align="right">Retorno :</td>
        <td><%= f.text_field :periodo, :size => 15 %></td>
      </tr>
      <tr>
        <td align="right">Valor :</td>
        <td><%= f.text_field :valor, :size => 15 %></td>
      </tr>
      <tr>
        <td></td>
        <td colspan="2">
          <fieldset>
            <legend>Tipo</legend>
            <%= f.radio_button :tipo, 0,:Checked => "True" %>Hrs.
            <%= f.radio_button :tipo, 1 %>Km
          </fieldset>
        </td>
      </tr>
    </table>
  </div>
  
    <%= f.submit "Grabar" %>
    <%= link_to 'Volver', servicos_path %>
<% end %>


