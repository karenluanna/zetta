   <table class="head_grid">
      <tr>
        <td width="50" align="center">Cota</td>
        <td width="200" align="center">Tipo</td>
        <td width="100" align="center">Cheque</td>
        <td width="100" align="center">Valor</td>
        <td width="30" align="center"></td>
        <td width="30" align="center"></td>
      </tr>
   </table>

   <div class="rolagem" dir="div">
      <table>
        <%  vendas_financas.each do |vf| %>
          <tr class = "<%= cycle("cor2", "cor1") %>">

            <td width="50" align="center"> <%= h vf.cota %></td>
            <% if vf.tipo == 0 %>
              <td width="200" align="center">CONTADO</td>
            <% else %>
              <td width="200" align="center">CREDITO</td>
            <% end %>
            <td width="100" align="left"> <%= h vf.cheque %></td>
            <td width="100" align="right"><%= h number_to_currency(vf.valor_guarani_contado, :format=>' %n ', :precision => 0)  %></td>
            <td><%= link_to 'Editar', edit_vendas_financa_path(vf) %></td>
            <td><%= link_to 'Borrar', vf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
   </div>
