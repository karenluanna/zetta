<body onload="ImputFocus('filtro')">
<h1 align="right" id="header">Nota de Credito Proveedor</h1>
    <ul class="tabs">
        <li><a href="#tab1">N.C. Proveedor - [Facturas]</a></li>
    </ul>

    <div class="tab_container">

             <%= render 'busca_faturas'%>

             <table>
               <tr>
                 <td> <%= render :partial=>"/nc_proveedor_faturas/new_fatura", :locals=>{:nc_proveedor_fatura=>NcProveedorFatura.new(:nota_credito_proveedor_id=>@nota_credito_proveedor.id)} %> 
                 </td>
               </tr>
            </table>

            <%= render :partial=>"/nc_proveedor_faturas/index_fatura", :locals=>{:nc_proveedor_faturas => @nota_credito_proveedor.nc_proveedor_fatura} %>

    </div>

    <div class="buttons">
         <%= link_to 'Volver', edit_nota_credito_proveedor_path(@nota_credito_proveedor),:class => 'button back' %> 
    	 <% if @nota_credito_proveedor.operacao == 0 %>
            <%= link_to 'Seguir', "/nota_credito_proveedors/nc_proveedor_produtos/#{@nota_credito_proveedor.id}" , :class => 'button next' %>
         <% else %>             
            <%= link_to 'Seguir', "/nota_credito_proveedors/nc_proveedor_financa/#{@nota_credito_proveedor.id}" , :class => 'button next' %>
         <% end %>             
    </div>
</div>
</body>

