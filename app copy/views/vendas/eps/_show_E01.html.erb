	   <%= link_to 'Seguir ', vendas_financa_vendas_path(:id => @venda.id) , :class => "button next" %>
	<% else %>
		<a href="/vendas/colaboradores/<%= @venda.id.to_i %>", class ="button next">Seguir </a> |
	<% end %>   
	   <a href="javascript:void(0)"class="button print" onClick="ComprovanteOrden()">Comprovante</a>
	   <%= hidden_field_tag :id, @venda.id %>
	   <%= hidden_field_tag :moeda, @venda.moeda %>
	   <%= hidden_field_tag :maiorista, @venda.tipo_maiorista %>
</div>

  </div>


<script>
	function ComprovanteOrden()                //
	{
		window.open('/vendas/requerimento_ordem_servico/' + document.getElementById('id').value, 'Pagina', ' SCROLLBARS=YES, TOP=250, LEFT=500, WIDTH=600, HEIGHT=400');
	}

	document.onkeydown= function(e) {
		var cliente  = document.getElementById('maiorista').value
		var deposito = document.getElementById('vendas_produto_deposito_id').value
		//BOTAO F4
		if(e.which == 115)
			location.href="/vendas/novo_produto/"+ document.getElementById('id').value;
		//LISTA DE PRODUTOS
		if(e.which == 113)
			window.open('/produtos/busca_venda_produto?cliente='+cliente+'&deposito_id='+deposito+'', 'Pagina', ' SCROLLBARS=YES, TOP=10, LEFT=50, WIDTH=2500, HEIGHT=400');

	}
</script>

