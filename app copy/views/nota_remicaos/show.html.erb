<h1 align="right" id="header">Nota-Remicion Productos</h1>

Nota-Remicion Productos

<div class="group_cd">
  <table>
    <tr>
      <td align="right">Fecha :</td>
      <td><%= @nota_remicao.data.strftime("%d/%m/%Y") %></td>
    </tr>

    <tr>
      <td align="right">Origem :</td>
      <td><%= @nota_remicao.origem_unidade_nome %></td>
      <% if @nota_remicao.motivo == 0 %>
            <td align="right">Destino :</td>
            <td><%= @nota_remicao.destino_unidade_nome %></td>
      <% else %>
            <td align="right">Destino :</td>
            <td><%= @nota_remicao.destino_persona_nome %></td>
      <% end %>
    </tr>


  </table>
</div>

<br/>
<%= render :partial=>"index_produtos", :locals=>{:nota_remicao_produtos => @nota_remicao.nota_remicao_produtos} %>
<br/>
<%= render :partial=>"form_produtos", :locals=>{:nota_remicao_produto=>NotaRemicaoProduto.new(:nota_remicao_id=>@nota_remicao.id)} %>

<%= link_to 'Volver', edit_nota_remicao_path(@nota_remicao) %> |
<a href="javascript:void(0)" onClick="Listado()">Listado</a> |
<a href="javascript:void(0)" onClick="Comprovante()">Comprovante</a> |

<%= hidden_field_tag :id, @nota_remicao.id %>

<script>

  function Listado()                //
  {
    window.open('/nota_remicaos/detalhes_produtos_print/' + document.getElementById('id').value, 'Pagina', ' SCROLLBARS=YES, TOP=250, LEFT=500, WIDTH=600, HEIGHT=400');
  }

  function Comprovante()            //
  {
    window.open('/nota_remicaos/comprovante/' + document.getElementById('id').value, 'Pagina', ' SCROLLBARS=YES, TOP=250, LEFT=500, WIDTH=600, HEIGHT=400');
  }

  //ABRI POPUP-----------------------------------------------------------------
document.onkeydown=function(e)
{
    if(e.which == 113)
        window.open('/produtos/busca_remicao_produto', 'Pagina', ' SCROLLBARS=YES, TOP=10, LEFT=10, WIDTH=1000, HEIGHT=400');
}

//FIM ABRI POPUP----------------------------------------------------------------

</script>
