<div class="group">
   <table>
      <tr>
         <td width="50" align="center">Cod.</td>
         <td width="80" align="center">Fecha</td>
         <td width="200" align="center">Nombre</td>
         <td width="200" align="center">Cuenta</td>
         <td width="10" align="center">Moneda</td>
         <td width="100" align="center">Valor</td>
      </tr>
   </table>  
   <div class="rolagem" id="div">
      <table>
      
         <% @adelantos.each do |adelanto| %>
            <tr class="<%= cycle("cor1", "cor2")%>">
               <td width="50" align="center"><%= adelanto.id %></td>
               <td width="80" align="center"><%= adelanto.data.strftime("%d/%m/%Y") %></td>
               <td width="200" align="left"><%= adelanto.persona_nome %></td>
               <td width="200" align="left"><%= adelanto.conta_nome %></td>
               <% if adelanto.moeda == 0 %>
               <td width="10" align="center">U$</td>
               <td width="100" align="center"><%= number_to_currency( adelanto.valor_dolar,      :format =>' %n ', :separeitor => "," )%></td>
               <% else %>
               <td width="50" align="center">Gs</td>
               <td width="100" align="center"><%= number_to_currency( adelanto.valor_guarani,      :format =>' %n ', :precision => 0 )%></td>
               <% end %>
               <td><%= link_to 'Editar', edit_adelanto_path(adelanto) %></td>
               <td><%= link_to 'Borrar', adelanto, :confirm => 'Tiene Certeza ?', :method => :delete %></td>
            </tr>
         <% end %>
      </table>

   </div>
</div>
