<%= form_for(@safra_impureza) do |f| %>
  <% if @safra_impureza.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@safra_impureza.errors.count, "error") %> prohibited this safra_impureza from being saved:</h2>

      <ul>
      <% @safra_impureza.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <ul class="tabs">
    <li><a href="#tab1">Impurezas - [Edicion]</a></li>
  </ul>

    <div class="tab_container">
      <div id="tab1" class="tab_content">
        <table>
          <tr>
            <td width="200">
              <fieldset>
                <legend>Impurezas :</legend>
                  <table>
                    <tr>
                      <td align="right">Produto :</td>
                      <td colspan="1"><%= f.collection_select :produto_id, Produto.all( :select => ' id,nome',
                               :order  => '2' ), :id,
                              :nome %>
                      </td>
                    </tr>

                    <tr>
                      <td align="right">Informado :</td>
                      <td><%= f.text_field :informado %></td>
                    </tr>

                    <tr>
                      <td align="right">Descuento :</td>
                      <td><%= f.text_field :desconto %></td>
                    </tr>
                  </table>
                </fieldset>
              </td> 
            </tr>
          </table>
        </div> 
        <div class="buttons">
          <%= f.submit :value => "Gravar", :class => "button" %>
          <%= link_to 'Volver', safras_path, :class => "button back" %>
        </div>  
        
<% end %>

  </div>