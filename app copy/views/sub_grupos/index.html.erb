<h1 id="header">Marca</h1>

<div class="acessos">
   <%= link_to 'Nuevo', new_sub_grupo_path, :class => 'button add' %>    
</div>

<div class="group">
   <table>
      <tr>
         <td width="50" align="center">Cod.</td>
         <td width="200" align="center">Descripcion</td>
      </tr>
   </table>
   <div class="rolagem" id="div">
      <table>
         <% @sub_grupos.each do |sub_grupo| %>
            <tr class = "<%= cycle("cor1", "cor2") %>">
               <td width="50" align="center"><%=h sub_grupo.id %></td>
               <td width="500" align="left"><%=h sub_grupo.descricao %></td>
               <td><%= link_to 'Editar', edit_sub_grupo_path(sub_grupo) %></td>
               <td><%= link_to 'Borrar', sub_grupo, :confirm => 'Are you sure?', :method => :delete %></td>
            </tr>
         <% end %>
      </table>
   </div>
</div>
