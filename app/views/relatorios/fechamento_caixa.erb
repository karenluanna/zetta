<body onload="DataInicio(),DataFinal(),CampoInicio()">
   <h1 align="right" id="header">.</h1>
   Cierre de Caja
   <div class="group">
      <h2>
         <%= form_tag resultado_fechamento_caixa_relatorios_path, :method => "get" do %>
            <table>

               <tr>
                  <td> Fecha:</td>
                  <td>
                     <input name="inicio" id="inicio"  size="10"  onkeyup="Formatadata(this,event)" />
                     Hasta
                     <input name="final"  id="final"   size="10" onkeyup="Formatadata(this,event)"/>
                  </td>
               </tr>

               <tr>
                <td align="right">Moneda :</td>
                <td>
                  <fieldset>
                    <%= radio_button_tag :moeda, 0,  :Checked => "True"%>Dolar
                    <%= radio_button_tag :moeda, 1  %> Guaranies
                  </fieldset>
                </td>
               </tr>

               <tr>
                  <td align="right">Vendedor :</td>
                  <td>
                     <%=   select("busca", "vendedor", Persona.all(:select => 'id,nome',:conditions => ['tipo_vendedor = 1'],:order => 'nome').collect {|p| [ p.nome, p.id ] }, { :include_blank => true })   %>
                  </td>
               </tr>


               <tr>
                  <td align="right">Caja :</td>
                  <td>
                     <%=   select("busca", "conta", Conta.all(:select => 'id,nome',:conditions => ['tipo = 0'],:order => 'nome').collect {|p| [ p.nome, p.id ] }, { :include_blank => true })   %>
                  </td>
               </tr>
               
               <tr>
                  <td></td>
                  <td>
                     <input  id      ="button"
                             type    ="submit"
                             value   ="            Informe           "
                             onclick = "Tipo('0')"/>

                     <input type     = "submit"
                            value    = "            Excel            "
                            onclick  = "Tipo('1')"/>
                  </td>
               </tr>

               <input type  = "hidden"
                      name  = "tipo"
                      id    = "tipo"
                      size  = "5"
                      value = "0"/>

            </table>
         <% end %>
      </h2>
   </div>
</body>


