<h1 align="right" id="header">Equipos</h1>

<div class="acessos">
   <%= link_to 'Nuevo', new_equipo_path, :class => "button add" %>
</div>

<div class="group">
  <table>
    <tr>
      <td width="50" align="center">Cod.</td>
      <td width="200" align="center">Desc.</td>
      <td width="50" align="center">Sigla</td>
    </tr>
  </table>

  <div class="rolagem" id="div">
    <table>
      <% @equipos.each do |equipo| %>
        <tr class = "<%= cycle("cor1", "cor2") %>">
          <td width="50" align="center"><%=h equipo.id.to_s.rjust(6,'0') %></td>
          <td width="200" align="left"><%=h equipo.descricao %></td>
          <td width="50" align="left"><%=h equipo.sigla %></td>
          <td><%= link_to 'Edit', edit_equipo_path(equipo) %></td>
          <td><%= link_to 'Destroy', equipo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
