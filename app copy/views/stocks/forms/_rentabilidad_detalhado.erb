<% qtd          = 0 %>
<% unit_us    = 0 %>
<% unit_gs    = 0 %>
<% costo_us  = 0 %>
<% costo_gs  = 0 %>

<table>
	<% @stocks.each do |st|%>
		<tr>
			<td width="20" align="center"><%= st.clase_id %></td>
			<td width="20" align="center"><%= st.grupo_id %></td>
			<td width="20" align="center"><%= st.fabricante_cod %></td>
			<td width="300" align="left"><%= st.produto_nome %></td>
			<td width="70" align="right"><%= st.quantidade %></td>				
			<% if params[:moeda] == '0'%>
				<td width="80" align="right"><%= number_to_currency( ( st.unitario_dolar.to_f * st.quantidade ) , :format=>' %n ', :separeitor => ',') %></td>				
				<td width="80" align="right"><%= number_to_currency( ( st.custo_promed_us.to_f  * st.quantidade ), :format=>' %n ', :separeitor => ',') %></td>				
				<td width="80" align="right"><%= number_to_currency( dif =( (st.unitario_dolar.to_f * st.quantidade ) - (st.custo_promed_us.to_f * st.quantidade) ) , :format=>' %n ', :separeitor => ',') %></td>				
				<td width="80" align="right"><%= number_to_currency( total_us = ( ( dif.to_f * 100 ) /  ( st.custo_promed_us.to_f * st.quantidade ) ), :format=>' %n ', :precision => 2 ) %> %</td>				
				<% unit_us += ( st.unitario_dolar.to_f * st.quantidade )%>
				<% costo_us += ( st.custo_promed_us.to_f * st.quantidade ) %>

			<% else %>
				<td width="80" align="right"><%= number_to_currency( ( st.unitario_guarani.to_f * st.quantidade ), :format=>' %n ', :precision => 0 ) %></td>				
				<td width="80" align="right"><%= number_to_currency( ( st.custo_promed_gs.to_f * st.quantidade ), :format=>' %n ', :precision => 0 ) %></td>				
				<td width="80" align="right"><%= number_to_currency( dif = ( ( st.unitario_guarani.to_f * st.quantidade )- ( st.custo_promed_gs.to_f * st.quantidade )), :format=>' %n ', :precision => 0 ) %></td>				
				<td width="80" align="right"><%= number_to_currency( total_gs = ( ( dif.to_f * 100 ) /  ( st.custo_promed_gs.to_f * st.quantidade ) ), :format=>' %n ', :precision => 2 ) %> %</td>				
				<% unit_gs += ( st.unitario_guarani.to_f * st.quantidade ) %>
				<% costo_gs += ( st.custo_promed_gs.to_f * st.quantidade ) %>
			<% end %>
		</tr>
		<% qtd       += st.quantidade %>
	<% end %>
		<tr class="head" height="20">			
			<td colspan="4"></td>				
			<td width="80"' align="right"><%= number_to_currency( qtd , :format=>' %n ', :separeitor => ',') %></td>				
			<% if params[:moeda] == '0' %>
				<td width="80" align="right"><%= number_to_currency( unit_us.to_f , :format=>' %n ', :separeitor => ',') %></td>				
				<td width="80" align="right"><%= number_to_currency( costo_us.to_f , :format=>' %n ', :separeitor => ',') %></td>				
				<td width="80" align="right"><%= number_to_currency( dif_tot =( unit_us.to_f - costo_us.to_f ) , :format=>' %n ', :separeitor => ',') %></td>				
				<td width="80" align="right"><%= number_to_currency( total_all_us = ( ( dif_tot.to_f * 100 ) /  costo_us.to_f ), :format=>' %n ', :precision => 2 ) %> %</td>				
			<% else %>
				<td width="80" align="right"><%= number_to_currency( unit_gs.to_f, :format=>' %n ', :precision => 0 ) %></td>				
				<td width="80" align="right"><%= number_to_currency( costo_gs.to_f, :format=>' %n ', :precision => 0 ) %></td>				
				<td width="80" align="right"><%= number_to_currency( dif_tot = ( unit_gs.to_f - costo_gs.to_f ), :format=>' %n ', :precision => 0 ) %></td>				
				<td width="80" align="right"><%= number_to_currency( total_all_gs = ( ( dif_tot.to_f * 100 ) /  costo_gs.to_f ), :format=>' %n ', :precision => 2 ) %> %</td>				
			<% end %>
		</tr>

</table>
