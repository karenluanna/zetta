<body onload="DataFinal(),CampoInicio()">
   <h1 align="right" id="header">.</h1>
   Extracto Bancario
   <div class="group">
      <h2>
         <%= form_tag resultado_extrato_bancario_financas_path, :method => "get" do%>
            <table>

               <tr>
                  <td> Fecha </td>
                  <td><input name="inicio" id="inicio"  size="10"  type="text" onkeyup="Formatadata(this,event)" />
                     Hasta
                     <input name="final"  id="final"   size="10" type="text" onkeyup="Formatadata(this,event)"/></td>
               </tr>

               <tr>
                  <td> Cheque :</td>
                  <td><input name="cheque" id="cheque"  size="10"  type="text" /></td>

               </tr>

               <tr>
                  <td></td>
                  <td>
                     <fieldset>
                        <legend>Filtros</legend>
                        <input id="filtro" name="filtro" type="radio" value="0"  checked 
                                           onkeyup="Formatadata(this,event),EnterTab(event,'tipo_cliente')",
                                           onkeypress="return bloqEnter(event)"/> Agrupado por Cheque

                        <input id="filtro" name="filtro" type="radio" value="1" 
                                           onkeyup="Formatadata(this,event),EnterTab(event,'tipo_cliente')",
                                           onkeypress="return bloqEnter(event)"/>Detalhado

                     </fieldset>
                  </td>
               <tr>



               <tr>
                  <td>Cuenta :</td>
                  <td>
                     <%=   select("busca", "conta", Conta.all(:select => 'id,nome',:conditions => ['tipo = 1'],:order => 'nome').collect {|p| [ p.nome, p.id ] }, { :include_blank => true })   %>
                  </td>
               </tr>

               <tr>
                  <td align="right"></td>
                  <td><%= check_box_tag :futuros, true %>Mostrar Lanz. Fucturos</td>
               </tr>

               <tr>
                  <td></td>
                  <td>
                     <fieldset>
                        <legend>Moneda</legend>
                        <input id="moeda" name="moeda" type="radio" value="0"  checked/>Dolar
                        <input id="moeda" name="moeda" type="radio" value="1"/>Guaranies
                        <input id="moeda" name="moeda" type="radio" value="2"/>Reais
                     </fieldset>
                  </td>
               </tr>


               <tr>
                  <td></td>
                  <td>
                     <input type="submit" value="Informe" onclick="Tipo('0')" class="button_info" />
                     <input type="submit" value="Excel" onclick="Tipo('1')"  class="button_info"/>
                  </td>

               </tr>

               <input type="hidden" name="tipo" id="tipo"  size="5" value="0"/>


            <% end %>

         </table>


      </h2>
   </div>
</body>


