<%= form_for(controle_pulv_maq) do |f| %>
  <% if controle_pulv_maq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(controle_pulv_maq.errors.count, "error") %> prohibited this controle_pulv_maq from being saved:</h2>

      <ul>
      <% controle_pulv_maq.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :controle_pulv_id %>
  
        <table>
              <tr>
                <td width="1000">
                  <fieldset>
                    <legend>Cadastro Maquina :</legend>
                    <table>
                      <tr> 
                        <td align="right">Fecha :</td>
                        <td colspan="2"><%= f.date_select :data %></td>                        
                      </tr>

                      <tr>
                        <td align="right">Modelo :</td>
                         <td colspan="1"><%= f.collection_select :rodado_id, Rodado.all( :select => ' id,modelo',
                               :order  => '2' ), :id,
                              :modelo %></td>


                        <td align="right">Capacidad :</td>
                        <td><%= f.text_field :rodado_capacidade, :size => 10 %></td>                        


                        <td align="right">Hora/maq :</td>
                        <td><%= f.text_field :hora_maq, :size => 10 %></td>                        
                      </tr>

                      <tr>
                        <td align="right">Bico 1 :</td>
                        <td><%= f.collection_select :bico_01_id, Bico.all( :select => ' id,nome',
                              :order  => '2' ), :id,
                              :nome %></td>


                        <td align="right">Vazao 1 :</td>
                        <td><%= f.number_field :vazao_01, :size => 10 %></td>                        

                        <td align="right">Autonomia 1 :</td>
                        <td><%= f.text_field :autonomia_01, :size => 10 %></td>                        

                        <td align="right">Velocidade 1 :</td>
                        <td><%= f.number_field :velocidade_01, :size => 10 %></td>                        
                      </tr>

                      <tr>
                        <td align="right">Bico 2 :</td>
                        <td><%= f.collection_select :bico_02_id, Bico.all( :select => ' id,nome',
                              :order  => '2' ), :id,
                              :nome %></td>


                        <td align="right">Vazao 2 :</td>
                        <td><%= f.number_field :vazao_02, :size => 10 %></td>                        

                        <td align="right">Autonomia 2 :</td>
                        <td><%= f.text_field :autonomia_02, :size => 10 %></td>                        

                        <td align="right">Velocidade 2 :</td>
                        <td><%= f.number_field :velocidade_02, :size => 10 %></td>                        
                      </tr>

                     <tr>
                        <td align="right">Estado Maquina :</td>
                        <td>
                          <select align="right">
                            <option>OTIMO</option>
                            <option>BOM</option>
                            <option>REGULAR</option>
                            <option>PESSIMO</option>
                          </select>
                        </td>

                        <td align="right" >Estado :</td>
                        <td colspan="2">
                          <fieldset>
                          <%= f.check_box :etiqueta %>ETIQUETAS 
                          <%= f.check_box :calibracao %>CALIBRACION
                          <%= f.check_box :regular %>REGULAGEM
                          </fieldset>
                       </td>
                       <td><%= f.submit :value => " Grabar ", :class => "button" %></td>
                       <td></td>

                     </tr>
                    </table>
                  </fieldset>                    
                </td>
              </tr>
        </table>

<% end %>
