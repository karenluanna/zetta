<%= form_for(@controle_pulv_maq) do |f| %>
  <% if @controle_pulv_maq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@controle_pulv_maq.errors.count, "error") %> prohibited this controle_pulv_maq from being saved:</h2>

      <ul>
      <% @controle_pulv_maq.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <ul class="tabs">
      <li><a href="#tab1">Controle de Maquina - [Edicion]</a></li>
   </ul>

    <div class="tab_container">
      <div id="tab1" class="tab_content">
        <table>
