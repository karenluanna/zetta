<h1 align="right" id="header">Plan de Pago</h1>

<%= form_for(@plano) do |f| %>

  <% if @plano.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plano.errors.count, "error") %> prohibited this asset from being saved:</h2>

      <ul>
        <% @plano.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
   <div>
      <ul class="tabs">
         <li><a href="#tab1">Plan de Pago - [Edicion]</a></li>
      </ul>

      <div class="tab_container">
         <div id="tab1" class=Persona"tab_content">
         	<table>
         		<tr>
         			<td align="right">Condicion :</td>
         			<td colspan="3"><%= f.text_field :condicao, :size => 50, :onkeydown => "f(this)", :onkeyup   => "f(this)" %></td>
         		</tr>
         		<tr>
         			<td align="right"></td>
         			<td><%= f.check_box :status %>Zafra</td>         			
         		</tr>

         		<tr>
         			<td align="right">Periodo :</td>
         			<td><%= f.text_field :periodo,:size => 15 %> En Dias (Ex. 30 dias, 60 dias) </td>
         		</tr>

                <tr>
         			<td align="right">Mes :</td>
                    <td><%= f.select :mes, ([["0", 0],["01", 1], ["02", 2], ["03", 3],
                               ["04", 4], ["05", 5], ["06", 6], ["07", 7],
                               ["08", 8], ["09", 9], ["10", 10], ["11", 11], ["12", 12]]) %>
                        AÃ±o :
                        <%= f.select :ano, ([["0000", 0000],["2008", 2008], ["2009", 2009], ["2010", 2010],
                               ["2011", 2011], ["2012", 2012], ["2013", 2013], ["2014", 2014], ["2015", 2015]]) %></td>
                </tr>
                <tr>
         			<td align="right">Tasa :</td>
         			<td><%= f.text_field :taxa,:size => 15 %> % </td>
                 	                	
                </tr>
         	</table>
         </div> 	
      </div> 	
    <div class="button">
     <%= link_to 'Volver', planos_path,:class => 'links' %>
     <%= f.submit '   Grabar   ',:class => 'enviar' %>
    </div> 	
<% end %>

