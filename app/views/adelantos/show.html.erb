<h1 align="right" id="header">Adelantos</h1>

<div class="buttons">

	<%= link_to 'Volver', edit_adelanto_path(@adelanto), :class => "button back" %>
	<%= link_to 'Salir', adelantos_path , :class => "button delete"%>
	<%= link_to 'Nuevo', new_adelanto_path, :class => "button add" %>
	<a href="javascript:void(0)" onClick="ComprovanteRecibo()" class="button print">Recibo</a> 
	<a href="javascript:void(0)" onClick="Comprovante()" class="button print">Comprobante</a>
	<%= hidden_field_tag :id, @adelanto.id %>
</div>

<script>
	function ComprovanteRecibo()                //
	{
		window.open('/adelantos/' + document.getElementById('id').value+'/recibo', 'Pagina', ' SCROLLBARS=YES, TOP=250, LEFT=500, WIDTH=600, HEIGHT=400');
	}

	function Comprovante()                //
	{
		window.open('/adelantos/' + document.getElementById('id').value+'/comprovante', 'Pagina', ' SCROLLBARS=YES, TOP=250, LEFT=500, WIDTH=600, HEIGHT=400');
	}

</script>
