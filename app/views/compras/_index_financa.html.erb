<table class="head_grid">
   <tr>
      <td width="80" align="center">Data</td>
      <td width="80" align="center">Venc.</td>
      <td width="50" align="center">Cota</td>
      <td width="300" align="center">Proveedor</td>
      <td width="100" align="center">Dif.</td>
      <td width="100" align="center">Cheque</td>
      <td width="70" align="center">Moneda</td>
      <td width="100" align="center">Valor </td>
      <td width="200" align="center">Conta</td>

   </tr>
</table>

<div class="rolagem" dir="div">

   <table>
      <% for compras_financa in compras_financas %>
         <tr class = "<%= cycle("cor1", "cor2") %>">
            <td width="80" align="center">   <%= h compras_financa.data.strftime("%d/%m/%Y") %></td>
            <td width="80" align="center">   <%= h compras_financa.vencimento.strftime("%d/%m/%Y") %></td>
            <td width="50" align="center">   <%= h compras_financa.cota %></td>
            <td width="300" align="left">   <%= h compras_financa.persona_nome%></td>
            <td width="100" align="center">    <%= h compras_financa.diferido.strftime("%d/%m/%Y") %></td>
            <td width="100" align="center">    <%= h compras_financa.cheque %></td>
            <% if compras_financa.moeda == 0 %>
               <td width="70" align="center">U$.</td>
               <td width="100" align="right">   <%=h number_to_currency(compras_financa.valor_dolar, :format=>' %n ', :separator => ",")  %></td>
            <% elsif compras_financa.moeda == 1 %>
               <td width="70" align="center">Gs.</td>
               <td width="100" align="right">   <%=h number_to_currency(compras_financa.valor_guarani, :format=>' %n ', :precision => 0)  %></td>
            <% else %>               
               <td width="70" align="center">R$.</td>
               <td width="100" align="right">   <%=h number_to_currency(compras_financa.valor_real, :format=>' %n ', :separator => ",")  %></td>
            <% end %>
            <td width="200" align="left">    <%= h compras_financa.conta_nome%></td>
            <td><%= link_to 'Editar', edit_compras_financa_path(compras_financa) %></td>
            <td><%= link_to 'Borrar', compras_financa, :confirm => 'Tiene Certeza ?', :method => :delete %></td>
         </tr>
      <% end %>
   </table>
</div>



